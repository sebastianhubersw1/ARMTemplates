{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "identity": {
            "type": "string",
            "allowedValues": [
                "None",
                "SystemAssigned"
            ]
        },
        "storageType": {
            "type": "string",
            "allowedValues": [
                "LocallyRedundant",
                "GeoRedundant"
            ],
            "defaultValue": "GeoRedundant"
        },
        "enableCRR": {
            "type": "bool",
            "defaultValue": true
        },
        "tags": {
            "type": "object",
            "defaultValue": "[json('{}')]"
        }
    },
    "variables": {
        "sku": {
            "name": "RS0",
            "tier": "Standard"
        }
    },
    "resources": [
        {
            "type": "Microsoft.RecoveryServices/vaults",
            "apiVersion": "2020-10-01",
            "location": "[parameters('location')]",
            "name": "[parameters('name')]",
            "sku": "[variables('sku')]",
            "identity": {
                "type": "[parameters('identity')]"
            },
            "properties": {
            },
            "tags": "[parameters('tags')]"
        },
        {
            "type": "Microsoft.RecoveryServices/vaults/backupstorageconfig",
            "apiVersion": "2020-02-02",
            "name": "[concat(parameters('name'), '/vaultstorageconfig')]",
            "dependsOn": [
                "[resourceId('Microsoft.RecoveryServices/vaults/', parameters('name'))]"
            ],
            "properties": {
                "StorageModelType": "[parameters('storageType')]",
                "CrossRegionRestoreFlag": "[parameters('enableCRR')]"
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "backupPolicies",
            "dependsOn": [ "[resourceId('Microsoft.RecoveryServices/vaults', parameters('name'))]" ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/sebastianhubersw1/ARMTemplates/master/RSV/backupPolicies.template.json"
                },
                "parameters": {
                    "vaultName": {
                        "value": "[parameters('name')]"
                    },
                    "backupManagementType": {
                        "value": "AzureIaasVM"
                    },
                    "policyName": {
                        "value": "DCs-daily"
                    },
                    "instantRpRetentionRangeInDays": {
                        "value": 3
                    },
                    "schedule": {
                        "value": {
                            "schedulePolicyType": "SimpleSchedulePolicy",
                            "scheduleRunFrequency": "Daily",
                            "scheduleRunTimes": [ "2021-08-24T22:30:00Z" ],
                            "scheduleWeeklyFrequency": 0
                        }

                    },
                    "timeZone": {
                        "value": "W. Europe Standard Time"
                    },
                    "instantRPDetails": {
                        "value": {
                            "azureBackupRGNamePrefix": "[parameters('name')]",
                            "azureBackupRGNameSuffix": "-rg"
                        }
                    },
                    "retention": {
                        "value": {
                            "retentionPolicyType": "LongTermRetentionPolicy",
                            "dailySchedule": {
                                "retentionTimes": [ "2021-08-24T22:30:00Z" ],
                                "retentionDuration": {
                                    "count": 30,
                                    "durationType": "Days"
                                }
                            },
                            "weeklySchedule": {
                                "daysOfTheWeek": [ "Sunday" ],
                                "retentionTimes": [ "2021-08-24T22:30:00Z" ],
                                "retentionDuration": {
                                    "count": 6,
                                    "durationType": "Weeks"
                                }
                            }

                        }

                    }
                }
            }
        }
    ]
}
